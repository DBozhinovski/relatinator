{
  "name": "relatinator",
  "description": "A humble library for finding related posts and content. Uses tf-idf under the hood. Primarily aimed at static site generators.",
  "repository": {
    "type": "git",
    "url": "https://github.com/DBozhinovski/relatinator"
  },
  "keywords": [
    "relatinator",
    "related",
    "words",
    "posts",
    "articles",
    "static"
  ],
  "version": "2.0.1",
  "type": "module",
  "main": "./dist/relatinator.mjs",
  "module": "./dist/relatinator.mjs",
  "exports": {
    ".": {
      "types": "./dist/relatinator.d.ts",
      "import": "./dist/relatinator.mjs"
    }
  },
  "types": "./dist/relatinator.d.ts",
  "scripts": {
    "dev": "vite --host",
    "build": "rimraf dist && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.cjs",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vitest/coverage-v8": "^3.0.6",
    "astro": ">=5",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "gray-matter": "^4.0.3",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "natural": "8.0",
    "wink-eng-lite-web-model": "1.8",
    "wink-nlp": "2.3",
    "wink-nlp-utils": "2.1"
  },
  "peerDependencies": {
    "typescript": ">=4.7"
  }
}
